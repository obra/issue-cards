{
  "name": "issue-cards",
  "version": "1.0.0",
  "description": "AI-Optimized Command Line Issue Tracking Tool",
  "main": "src/index.js",
  "bin": {
    "issue-cards": "./bin/issue-cards.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=tests/e2e",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "prepare": "chmod +x ./bin/issue-cards.js",
    "prepublishOnly": "npm test && npm run lint",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "keywords": [
    "issue-tracking",
    "task-management",
    "cli",
    "markdown",
    "git",
    "todo",
    "task",
    "workflow",
    "ai-friendly"
  ],
  "author": "Issue Cards Team",
  "license": "MIT",
  "homepage": "https://github.com/issue-cards/issue-cards",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/issue-cards/issue-cards.git"
  },
  "bugs": {
    "url": "https://github.com/issue-cards/issue-cards/issues"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "handlebars": "^4.7.8",
    "simple-git": "^3.22.0",
    "unified": "^10.1.2",
    "remark-parse": "^10.0.2",
    "remark-stringify": "^10.0.3",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
